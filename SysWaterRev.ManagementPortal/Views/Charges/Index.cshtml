@model IEnumerable<ChargeViewModel>
@{
    ViewBag.Title = "Charges";
}
@section ContentHeader
{
     <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
}
<h2>Charges</h2>
<p>
    @Html.ActionLink("Create New", "Create", htmlAttributes:new {@class="btn btn-default btn-success"}, routeValues:new {})
</p>
<table class="table table-striped table-responsive table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartRange)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndRange)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChargeScheduleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChargeScheduleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <div class="btn-group btn-group-xs">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ChargeId }, new { @class = "btn btn-default btn-xs" })
                    @Html.ActionLink("Details", "Details", new { id = item.ChargeId }, new { @class = "btn btn-default btn-xs" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ChargeId }, new { @class = "btn btn-default btn-xs btn-warning" })
                </div>
            </td>
        </tr>
    }
</table>