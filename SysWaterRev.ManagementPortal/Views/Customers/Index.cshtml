@model IEnumerable<CustomerViewModel>
@{
    ViewBag.Title = "Customers";
}
@section ContentHeader{
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customers
        <small>List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Customers</li>
    </ol>
</section>
}
<section class="content">
    <div class="row"></div>
    <div class="row">
        <section>
            <p>
                @Html.ActionLink("Create New Customer", "Create", htmlAttributes: new { @class = "btn btn-default btn-success" }, routeValues: new { })
            </p>
            <table class="table table-striped table-responsive table-condensed table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MiddleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Identification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserGender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MetersOwned)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Identification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserGender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MetersOwned)
                        </td>
                        <td>
                            <div class="btn-group btn-xs">
                                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }, htmlAttributes: new { @class = "btn btn-default btn-xs" })
                                @Html.ActionLink("Details", "Details", new { id = item.CustomerId }, htmlAttributes: new { @class = "btn btn-default btn-xs" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId }, htmlAttributes: new { @class = "btn btn-default btn-xs" })
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </section>
    </div>
</section>