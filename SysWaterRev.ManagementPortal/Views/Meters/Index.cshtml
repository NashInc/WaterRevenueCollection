@model IEnumerable<MeterViewModel>

@{
    ViewBag.Title = "Meters";
}
@section ContentHeader
{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Meters
            <small>List</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-th-large"></i>Home</a></li>
            <li class="active">Meters</li>
        </ol>
    </section>
}
<section class="content">
    <div class="row"></div>
    <div class="row">
        <div class="col-md-12">
            <p>
                @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default btn-success" })
            </p>
            <table class="table table-striped table-responsive table-condensed table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MeterSerialNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MeterNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastEditedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastEditDate)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MeterSerialNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MeterNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastEditedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastEditDate)
                        </td>
                        <td>
                            <div class="btn-group-xs">
                                @Html.ActionLink("Edit", "Edit", new { id = item.MeterId }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Details", "Details", new { id = item.MeterId }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.MeterId }, new { @class = "btn btn-default" })
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
</div>
</section> 