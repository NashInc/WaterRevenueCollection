@model IEnumerable<MeterViewModel>

@{
    ViewBag.Title = "Meters";
}

<h2>Meters</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {},htmlAttributes: new { @class = "btn btn-default btn-success" })
</p>
<table class="table table-striped table-responsive table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeterSerialNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeterNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastEditedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastEditDate)
        </th>
        <th></th>
    </tr>

    @foreach (MeterViewModel item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeterSerialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeterNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastEditedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastEditDate)
            </td>
            <td>
                <div class="btn-group-xs">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MeterId }, htmlAttributes: new { @class = "btn btn-default" })
                    @Html.ActionLink("Details", "Details", new { id = item.MeterId }, htmlAttributes: new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.MeterId }, htmlAttributes: new { @class = "btn btn-default" })
                </div>
            </td>
        </tr>
    }
</table>