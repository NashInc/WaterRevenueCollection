@model IEnumerable<ChargeScheduleViewModel>

@{
    ViewBag.Title = "Charge Schedules";
}
@section ContentHeader{
        <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Charge Schedules
        <small>List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Charge Schedules</li>
    </ol>
</section>
}
<section class="content">
    <div class="row"></div>
    <div class="row">
        <section>                          
                <p>
                    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default btn-success" })
                </p>
                <table class="table table-striped table-responsive table-condensed table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ChargeScheduleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ActivatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastEditedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastEditDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EffectiveDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ChargesUnderSchedule)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ChargeScheduleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActivatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastEditedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastEditDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EffectiveDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ChargesUnderSchedule)
                            </td>
                            <td>
                                <div class="btn-group btn-group-xs">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ChargeScheduleId }, new { @class = "btn btn-default btn-xs" })
                                    @Html.ActionLink("Details", "Details", new { id = item.ChargeScheduleId }, new { @class = "btn btn-default btn-xs" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ChargeScheduleId }, new { @class = "btn btn-default btn-xs btn-warning" })
                                    @Html.ActionLink("Add Charges", "AddChargesToSchedule", "ChargeSchedules", new { item.ChargeScheduleId }, new { @class = "btn btn-default btn-info" })
                                </div>
                            </td>
                        </tr>
                    }
                </table>
        </section>
    </div>
</section>