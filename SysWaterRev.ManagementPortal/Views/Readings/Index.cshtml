@model IEnumerable<ReadingViewModel>
@{
    ViewBag.Title = "Readings";

}
@section ContentHeader{
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Readings</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Readings</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
}
<section class="content">
    <div class="row"> </div>
    <div class="row">      
            <table class="table table-striped table-responsive table-condensed table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeFullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Latitude)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Longitude)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReadingValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitsConsumedWithNoCorrection)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsConfirmed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CorrectionValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitsConsumedWithCorrection)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    var styleString = string.Empty;
                    var isConfirmed = item.IsConfirmed.GetValueOrDefault();
                    if (isConfirmed)
                    {
                        styleString = "color:green;";
                    }
                    <tr style="@styleString ">
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Latitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Longitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReadingValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitsConsumedWithNoCorrection)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IsConfirmed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CorrectionValue)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.UnitsConsumedWithCorrection)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            <div class="btn-group btn-xs">
                                @Html.ActionLink("Correct", "Correction", new { id = item.ReadingId }, new { @class = "btn btn-default btn-xs btn-warning" })
                                @Html.ActionLink("Details", "Details", new { id = item.ReadingId }, new { @class = "btn btn-default btn-xs" })
                            </div>
                        </td>
                    </tr>
                }
            </table> 
    </div>
</section>