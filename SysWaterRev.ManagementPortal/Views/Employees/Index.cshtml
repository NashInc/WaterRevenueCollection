@model IEnumerable<EmployeeViewModel>
@{
    ViewBag.Title = "Employees";
}
@section ContentHeader{
    <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Employees
        <small>List</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> Home</a></li>
        <li class="active">Employees</li>
    </ol>
</section>
}
<section class="content">
    <div class="row">     
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>
                @Html.ActionLink("Create New Employee", "Create", htmlAttributes: new { @class = "btn btn-default btn-success" }, routeValues: new { })
            </p>
            <table class="table table-striped table-responsive table-condensed table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MiddleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Identification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeGender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Identification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeGender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            <div class="btn-group btn-xs">
                                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId }, new { @class = "btn btn-default btn-xs" })
                                @Html.ActionLink("Details", "Details", new { id = item.EmployeeId }, new { @class = "btn btn-default btn-xs" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }, new { @class = "btn btn-default btn-xs" })
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>   
</section>